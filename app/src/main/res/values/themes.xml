<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VoiceAssistant" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">@color/black</item>
        <item name="colorPrimary">@color/button_lapis</item>
    </style>

    <style name="Theme.VoiceAssistant" parent="Base.Theme.VoiceAssistant" />

    <style name="nightThemeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/night_dark_blue</item>
        <item name="android:colorForeground">@color/night_dark_blue</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/non_selected</item>
    </style>

</resources>