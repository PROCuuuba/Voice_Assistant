<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/left_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_chat_item"
        android:backgroundTint="@color/non_selected"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/left_chat_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/left_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_chat_text_item"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/speak_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/left_chat_text_item"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/speaker_icon"
            android:layout_toEndOf="@id/left_chat_time" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_chat_item"
        android:backgroundTint="@color/button_lapis"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/right_chat_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/right_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_chat_text_item"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"/>

    </RelativeLayout>

</RelativeLayout>